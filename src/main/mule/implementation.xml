		<online-ocrapi:create-translate doc:name="Create translate" doc:id="8aadbecb-bafb-456e-82d3-49e15e4c0242" config-ref="Online_OCR_API_Config" client-id="${secure::ocr_service.client_id}" client-secret="${secure::ocr_service.client_secret}"/>
		<set-variable value="#[payload.text.toLower()]" doc:name="Set Variable" doc:id="9a62c5dc-b79f-444c-aa46-469830cb2b6e" variableName="text" />
		<scripting:execute engine="Groovy" doc:name="Match keywords against text" doc:id="e111d0b0-1efe-4cfd-8993-c19408e1c41b" >
			<scripting:code >@Grapes(
    @Grab('org.apache.commons:commons-lang3:3.5')
)

import static org.apache.commons.lang3.StringUtils.getJaroWinklerDistance

def words = $keywords.toLowerCase().split(',')
def text = $text.toLowerCase().split().toList().unique()
def total = 0.0

words.each { word -&gt;
  total += text.collect { n-&gt;
      new Tuple(n, getJaroWinklerDistance(n, word))
  }.sort { -it.get(1) }.first().get(1)
}

println total / words.size() &gt; 0.90 ? &quot;Match&quot; : &quot;No match&quot;</scripting:code>
			<scripting:parameters ><![CDATA[#[
	{
		keywords: vars.keywords,
		text: vars.text
	}
]]]></scripting:parameters>
		</scripting:execute>
		<choice doc:name="Choice" doc:id="6bfc7436-7679-4141-8d11-8224ce631438" >
